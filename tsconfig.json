{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "/components": ["src/components"],
      "/components/*": ["src/components/*"],
      "/types": ["src/types"],
      "/types/*": ["src/types/*"],
      "/themes": ["src/themes"],
      "/themes/*": ["src/themes/*"]
    }
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": [
    "./src/**/**.test.tsx",
    "./src/**/**.stories.tsx",
    "node_modules",
    "dist"
  ]
}
